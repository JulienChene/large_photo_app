<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.hinge.challenge.largephoto">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:name="com.hinge.challenge.largephoto.LargePhotoApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".ui.activity.HomepageActivity"
                android:label="@string/activity_homepage_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".ui.activity.GalleryActivity"
                android:label="@string/activity_gallery_name">
        </activity>

    </application>

</manifest>